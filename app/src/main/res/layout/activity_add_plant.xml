<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_plant"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add_plant"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_plant_page_title"
        android:text="Add Item"
        android:textSize="24dp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="30dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/plant_name"
        android:layout_below="@+id/add_plant_page_title"
        android:layout_marginTop="40dp"
        android:hint="name"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/plant_quantity"
        android:layout_below="@+id/plant_name"
        android:layout_marginTop="20dp"
        android:hint="100"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/plant_price"
        android:layout_below="@+id/plant_quantity"
        android:layout_marginTop="20dp"
        android:hint="47.00"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/plant_category"
        android:layout_below="@+id/plant_price"
        android:layout_marginTop="20dp"
        android:hint="Category"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"/>

    <Button
        android:id="@+id/add_plant_button"
        android:layout_width="118dp"
        android:layout_height="53dp"
        android:layout_below="@id/plant_category"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="155dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="147dp"
        android:backgroundTint="#000000"
        android:text="ADD"
        android:textSize="20dp"
        android:textStyle="bold" />


</RelativeLayout>