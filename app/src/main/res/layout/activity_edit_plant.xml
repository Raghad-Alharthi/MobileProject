<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edit_plant"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/plant_page_title"
        android:hint="Edit Item"
        android:textSize="24dp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="30dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/plant_name"
        android:layout_below="@+id/plant_page_title"
        android:layout_marginTop="40dp"
        android:hint="name"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/plant_quantity"
        android:layout_below="@+id/plant_name"
        android:layout_marginTop="20dp"
        android:hint="100"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/plant_price"
        android:layout_below="@+id/plant_quantity"
        android:layout_marginTop="20dp"
        android:hint="47.00"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/plant_category"
        android:layout_below="@+id/plant_price"
        android:layout_marginTop="20dp"
        android:hint="Category"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"/>

    <Button
        android:id="@+id/editbtn"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_below="@id/plant_category"
        android:layout_centerInParent="true"
        android:layout_marginTop="70dp"
        android:backgroundTint="#000000"
        android:text="EDIT"
        android:textSize="20dp"
        android:textStyle="bold" />





</RelativeLayout>